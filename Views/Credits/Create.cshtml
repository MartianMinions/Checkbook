@model CheckBook.Models.Credit

@{
    ViewData["Title"] = "Create";
}




<h2>Enter a New Payment to You</h2>

<p>This is where you enter in any information of money that you have received. The best page!</p>


<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="amount" class="col-md-2 control-label" ></label>
            <div class="col-md-10">
                <input asp-for="amount" class="form-control" placeholder="How much money did you get?" />
                <span asp-validation-for="amount" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="description" class="col-md-2 control-label" ></label>
            <div class="col-md-10">
                <input asp-for="description" class="form-control" placeholder="What is the money from?" />
                <span asp-validation-for="description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="paymentForm" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control" id="paymentForm" name="paymentForm">
                    <option disabled selected hidden>Please choose...</option>
                    @foreach (var item in ViewBag.accountsData)
                    {
                        <option>@item.accountName</option>
                    }                    
                </select>
                <a asp-area="" asp-controller="AccountTypes" asp-action="Create">Add an account</a>
                <span asp-validation-for="paymentForm" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
